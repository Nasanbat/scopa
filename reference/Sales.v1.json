{
  "openapi": "3.0.0",
  "info": {
    "title": "Sales",
    "version": "1.0",
    "description": "БОРЛУУЛАЛТЫН МЭДЭЭЛЭЛ ХҮЛЭЭН АВАХ API-ууд"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/sales/sendSalesInfo": {
      "parameters": [],
      "post": {
        "summary": "Send sales info",
        "operationId": "19003000",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Борлуулалтын мэдээлэл илгээх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SalesItem"
                }
              },
              "examples": {
                "example-1": {
                  "value": [
                    {
                      "productCode": "string",
                      "name": "string",
                      "qty": 0,
                      "price": 0,
                      "supplierId": "string",
                      "date": "string",
                      "payType": "string"
                    }
                  ]
                }
              }
            }
          },
          "description": "Борлуулалтын мэдээлэл"
        }
      }
    },
    "/sales/sendSalesInfoBatch": {
      "post": {
        "summary": "Send sales info batch",
        "operationId": "post-sales-sendSalesInfoBatch",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "501": {
            "description": "Not Implemented"
          }
        },
        "description": "Багцаар борлуулалтын мэдээлэл илгээх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Sales"
                }
              },
              "examples": {
                "example-1": {
                  "value": [
                    {
                      "id": "string",
                      "totalPrice": 0,
                      "payType": "string",
                      "salesDate": "2021.05.20 18:25",
                      "items": [
                        {
                          "prodCode": "string",
                          "prodName": "string",
                          "qty": 0,
                          "price": 0,
                          "prodTag": "string"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          },
          "description": "Нэг хүсэлт дотор 50-с илүүгүй борлуулалтын мэдээг багцалж илгээнэ."
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SalesItem": {
        "description": "Борлуулалт доторх барааны мэдээлэл",
        "type": "object",
        "properties": {
          "prodCode": {
            "type": "string",
            "minLength": 1,
            "description": "Барааны ID дэлгүүр дотроо ашигладаг код"
          },
          "prodName": {
            "type": "string",
            "minLength": 1,
            "description": "Барааны нэр"
          },
          "qty": {
            "type": "number",
            "description": "Тоо хэмжээ"
          },
          "price": {
            "type": "number",
            "description": "Үнэ"
          },
          "prodCodeBase": {
            "type": "string",
            "description": "Барааны Scopa дээрх код. "
          }
        },
        "required": [
          "prodCode",
          "prodName",
          "qty",
          "price"
        ]
      },
      "Sales": {
        "title": "Sales",
        "type": "object",
        "description": "Борлуулалтын мэдээ",
        "x-examples": {
          "example-1": {
            "id": "string",
            "totalPrice": 0,
            "payType": "string",
            "salesDate": "2021.05.20 18:25",
            "items": [
              {
                "prodCode": "string",
                "prodName": "string",
                "qty": 0,
                "price": 0,
                "prodTag": "string"
              }
            ]
          }
        },
        "properties": {
          "id": {
            "type": "string",
            "description": "Борлуулалтын давтагдахгүй дугаарлалт"
          },
          "totalPrice": {
            "type": "number"
          },
          "payType": {
            "type": "string",
            "description": "Төлбөр хийсэн хэлбэр, CASH, CARD, MOBILE, MIXED"
          },
          "salesDate": {
            "type": "string",
            "description": "борлуулалт хийсэн огноо, цаг, минуттай",
            "format": "date-time",
            "example": "2021.05.20 18:25",
            "default": "yyyy.MM.dd hh:mi"
          },
          "items": {
            "type": "array",
            "description": "Борлуулсан бараанууд",
            "items": {
              "$ref": "#/components/schemas/SalesItem"
            }
          }
        },
        "required": [
          "id",
          "totalPrice"
        ]
      },
      "ReversalItem": {
        "title": "ReversalItem",
        "type": "object",
        "description": "Буцаалт доторх барааны мэдээлэл",
        "properties": {
          "prodCode": {
            "type": "string",
            "description": "Барааны код"
          },
          "prodName": {
            "type": "string",
            "description": "Барааны нэр"
          },
          "qty": {
            "type": "number",
            "description": "Тоо ширхэг"
          },
          "price": {
            "type": "number",
            "description": "нэгж үнэ"
          },
          "prodCodeBase": {
            "type": "string",
            "description": "Барааны код Скопа платформ дээрх"
          }
        },
        "required": [
          "prodCode",
          "prodName",
          "qty",
          "price"
        ]
      }
    }
  }
}