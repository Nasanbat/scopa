{
  "openapi": "3.0.0",
  "info": {
    "title": "Sales",
    "version": "1.0",
    "description": "БОРЛУУЛАЛТЫН МЭДЭЭЛЭЛ ХҮЛЭЭН АВАХ API-ууд"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/sales/sendSalesInfo": {
      "parameters": [],
      "post": {
        "summary": "Send sales info",
        "operationId": "19003000",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Борлуулалтын мэдээлэл илгээх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Sales"
              },
              "examples": {
                "example-1": {
                  "value": {
                    "id": "100011",
                    "totalPrice": 35200,
                    "payType": "CARD",
                    "salesDate": "2021.05.20 18:25",
                    "items": [
                      {
                        "prodCode": "789",
                        "prodName": "Атар талх",
                        "qty": 2,
                        "price": 1200,
                        "prodCodeBase": "111"
                      },
                      {
                        "prodCode": "856",
                        "prodName": "Eden архи",
                        "qty": 1,
                        "price": 32800,
                        "prodCodeBase": "511"
                      }
                    ]
                  }
                }
              }
            }
          },
          "description": "Борлуулалтын мэдээлэл"
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "SessionToken",
            "description": "Connect функцээр авсан TOKEN",
            "required": true
          }
        ]
      }
    },
    "/sales/sendSalesInfoBatch": {
      "post": {
        "summary": "Send sales info batch",
        "operationId": "post-sales-sendSalesInfoBatch",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "501": {
            "description": "Not Implemented"
          }
        },
        "description": "Багцаар борлуулалтын мэдээлэл илгээх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Sales"
                }
              },
              "examples": {
                "example-1": {
                  "value": [
                    {
                      "id": "100010",
                      "totalPrice": 230,
                      "payType": "CARD",
                      "salesDate": "2021.05.20 18:25",
                      "items": [
                        {
                          "prodCode": "123",
                          "prodName": "Талх",
                          "qty": 1,
                          "price": 230,
                          "prodCodeBase": "1250"
                        }
                      ]
                    },
                    {
                      "id": "100011",
                      "totalPrice": 2780,
                      "payType": "CASH",
                      "salesDate": "2021.05.20 18:23",
                      "items": [
                        {
                          "prodCode": "7778",
                          "prodName": "Гоймон",
                          "qty": 1,
                          "price": 2780,
                          "prodCodeBase": "452"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          },
          "description": "Нэг хүсэлт дотор 50-с илүүгүй борлуулалтын мэдээг багцалж илгээнэ."
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "SessionToken",
            "description": "Connect функцээр авсан TOKEN",
            "required": true
          }
        ]
      }
    },
    "/sales/sendReverseInfo": {
      "post": {
        "summary": "Send sales reversal info",
        "operationId": "post-sales-sendReverseInfo",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Буцаалтын гүйлгээний мэдээ илгээх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ReversalItem"
                }
              },
              "examples": {
                "example-1": {
                  "value": [
                    {
                      "prodCode": "string",
                      "prodName": "string",
                      "qty": 0,
                      "price": 0,
                      "prodCodeBase": "string",
                      "id": "string"
                    },
                    {
                      "prodCode": "string",
                      "prodName": "string",
                      "qty": 0,
                      "price": 0,
                      "prodCodeBase": "string",
                      "id": "string"
                    }
                  ]
                }
              }
            }
          },
          "description": "Буцааж байгаа бараанууд"
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "SessionToken",
            "description": "Connect функцээр авсан TOKEN",
            "required": true
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "SalesItem": {
        "description": "Борлуулалт доторх барааны мэдээлэл",
        "type": "object",
        "properties": {
          "prodCode": {
            "type": "string",
            "minLength": 1,
            "description": "Барааны ID дэлгүүр дотроо ашигладаг код"
          },
          "prodName": {
            "type": "string",
            "minLength": 1,
            "description": "Барааны нэр"
          },
          "qty": {
            "type": "number",
            "description": "Тоо хэмжээ"
          },
          "price": {
            "type": "number",
            "description": "Үнэ"
          },
          "prodCodeBase": {
            "type": "string",
            "description": "Барааны Scopa дээрх код. "
          }
        },
        "required": [
          "prodCode",
          "prodName",
          "qty",
          "price"
        ]
      },
      "Sales": {
        "title": "Sales",
        "type": "object",
        "description": "Борлуулалтын мэдээ",
        "x-examples": {
          "example-1": {
            "id": "string",
            "totalPrice": 0,
            "payType": "string",
            "salesDate": "2021.05.20 18:25",
            "items": [
              {
                "prodCode": "string",
                "prodName": "string",
                "qty": 0,
                "price": 0,
                "prodTag": "string"
              }
            ]
          }
        },
        "properties": {
          "id": {
            "type": "string",
            "description": "Борлуулалтын давтагдахгүй дугаарлалт"
          },
          "totalPrice": {
            "type": "number"
          },
          "payType": {
            "type": "string",
            "description": "Төлбөр хийсэн хэлбэр, CASH, CARD, MOBILE, MIXED"
          },
          "salesDate": {
            "type": "string",
            "description": "борлуулалт хийсэн огноо, цаг, минуттай",
            "format": "date-time",
            "example": "2021.05.20 18:25",
            "default": "yyyy.MM.dd hh:mi"
          },
          "items": {
            "type": "array",
            "description": "Борлуулсан бараанууд",
            "items": {
              "$ref": "#/components/schemas/SalesItem"
            }
          }
        },
        "required": [
          "id",
          "totalPrice"
        ]
      },
      "ReversalItem": {
        "title": "ReversalItem",
        "type": "object",
        "description": "Буцаалт доторх барааны мэдээлэл",
        "properties": {
          "prodCode": {
            "type": "string",
            "description": "Барааны код"
          },
          "prodName": {
            "type": "string",
            "description": "Барааны нэр"
          },
          "qty": {
            "type": "number",
            "description": "Тоо ширхэг"
          },
          "price": {
            "type": "number",
            "description": "нэгж үнэ"
          },
          "prodCodeBase": {
            "type": "string",
            "description": "Барааны код Скопа платформ дээрх"
          },
          "id": {
            "type": "string",
            "description": "Борлуулалтын дугаар"
          }
        },
        "required": [
          "prodCode",
          "prodName",
          "qty",
          "price",
          "id"
        ]
      }
    }
  }
}