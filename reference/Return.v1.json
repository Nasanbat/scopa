{
  "openapi": "3.0.0",
  "info": {
    "title": "Return",
    "version": "1.0",
    "description": "БАРАА БУЦААЛТТАЙ ХОЛБООТОЙ API-ууд"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/return/createNew": {
      "post": {
        "summary": "CreateNew",
        "operationId": "post-createNew",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "returnId": {
                      "type": "number"
                    }
                  }
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "returnId": 0
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Шинээр буцаалт үүсгэх",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "supplierId": {
                    "type": "integer",
                    "description": "Нийлүүлэгчийн Id"
                  },
                  "itemCount": {
                    "type": "integer",
                    "description": "Буцаах барааны тоо нэр төрлөөр"
                  },
                  "items": {
                    "type": "array",
                    "description": "Буцаасан барааны дэлгэрэнгүй жагсаалт",
                    "items": {
                      "$ref": "#/components/schemas/Item"
                    }
                  }
                },
                "required": [
                  "supplierId",
                  "itemCount",
                  "items"
                ]
              },
              "examples": {
                "example-1": {
                  "value": {
                    "supplierId": 0,
                    "itemCount": 0,
                    "items": [
                      {
                        "prodCode": "string",
                        "qty": 0,
                        "unitPrice": 0,
                        "meas": "string",
                        "reason": "string"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "title": "Item",
        "type": "object",
        "description": "Буцаах бараа",
        "x-examples": {
          "Alice Smith": {
            "id": 142,
            "firstName": "Alice",
            "lastName": "Smith",
            "email": "alice.smith@gmail.com",
            "dateOfBirth": "1997-10-31",
            "emailVerified": true,
            "signUpDate": "2019-08-24"
          }
        },
        "properties": {
          "productCode": {
            "type": "string",
            "description": "Скопагаас кодлосон барааны код байна"
          },
          "qty": {
            "type": "number",
            "description": "Тоо, хэмжээ"
          },
          "unitPrice": {
            "type": "number",
            "description": "Нэгжийн үнэ"
          },
          "meas": {
            "type": "string",
            "description": "Хэмжих нэгж: C - ширхэг, Kg - kilogram, L - liter   "
          },
          "reason": {
            "type": "string",
            "description": "Буцаасан шалтгаан: EXPIRED хугацаа дууссан, UNFOLD - баглаа задарсан, MOLD - муудсан, OTHER"
          }
        },
        "required": [
          "productCode",
          "qty",
          "unitPrice",
          "meas"
        ]
      }
    }
  }
}