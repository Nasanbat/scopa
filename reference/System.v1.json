{
  "openapi": "3.0.0",
  "info": {
    "title": "System",
    "version": "1.0",
    "description": "System холболт тогтоох, холболт шалгах зэрэг апи функцүүд"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/system/echo": {
      "get": {
        "summary": "Echo",
        "tags": [],
        "responses": {
          "200": {
            "description": "Session идэвхтэй байна"
          },
          "501": {
            "description": "Session дууссан байна."
          }
        },
        "operationId": "19000000",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "ScopaSession",
            "description": "TOKEN"
          }
        ],
        "description": "Холболт хэвийн байгаа эсэхийг шалгана"
      },
      "parameters": [],
      "post": {
        "summary": "Echo",
        "operationId": "19000000",
        "responses": {
          "200": {
            "description": "Session идэвхтэй байна"
          },
          "501": {
            "description": "Session дууссан байна."
          }
        },
        "description": "Холболт хэвийн байгаа эсэхийг шалгана",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "ScopaSession",
            "description": "TOKEN"
          }
        ]
      }
    },
    "/system/getToken": {
      "parameters": [],
      "post": {
        "summary": "Get token",
        "operationId": "19000003",
        "responses": {
          "200": {
            "description": "OK",
            "headers": {
              "ScopaSession": {
                "schema": {
                  "type": "string"
                },
                "description": "NEW_TOKEN"
              }
            }
          },
          "501": {
            "description": "Session үүсгэж өгөх боломжгүй "
          }
        },
        "description": "Автомат токен үүсгүүлж авах",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tanCode": {
                    "type": "integer",
                    "description": "Merchant mobile app -с энэ ТАН кодыг авч дамжуулна."
                  }
                }
              },
              "examples": {
                "example-1": {
                  "value": {
                    "tanCode": 845762
                  }
                }
              }
            }
          },
          "description": "Холболтын session token авах функц. Авсан токеноо ашиглана дараа дараачийн үйлдлүүдийг хийнэ."
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "title": "User",
        "type": "object",
        "description": "",
        "x-examples": {
          "example-1": {
            "id": 0,
            "firstName": "string",
            "lastName": "string",
            "email": "user@example.com",
            "phone": "1997-10-31",
            "loginName": "string",
            "type": "Merchant",
            "Name": "string"
          }
        },
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the given user."
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "example": "99013707"
          },
          "loginName": {
            "type": "string",
            "description": "Set to true if the user's email has been verified."
          },
          "type": {
            "type": "number",
            "description": "The date that the user was created.",
            "enum": [
              "Person",
              "Merchant",
              "Supplier"
            ],
            "default": "Merchant"
          },
          "Name": {
            "type": "string"
          },
          "merchantId": {
            "type": "integer"
          },
          "merchantName": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "loginName"
        ]
      }
    }
  }
}